{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*", "./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",

    // stricter
    "strict": true,

    // temp fix for mixed in js
    "noImplicitAny": false,
    "allowJs": true
  }
}
